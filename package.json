{
  "name": "natours",
  "version": "1.0.0",
  "description": "Learn node.js express and MongoDB",
  "scripts": {
    "start": "nodemon server.js",
    "start:prod": "NODE_ENV=production nodemon server.js",
    "debug": "ndb server.js",
    "watch:js": "parcel watch public/js/index.js --dist-dir ./public/js",
    "build:js": "parcel build ./public/js/index.js --dist-dir ./public/js",
    "compile:sass": "sass ./public/sass/main.scss ./public/css/style.comp.css",
    "concat:css": "concat -o ./public/css/style.concat.css ./public/css/icon-font.css ./public/css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' ./public/css/style.concat.css -o ./public/css/style.prefix.css",
    "compress:css": "sass ./public/css/style.prefix.css ./public/css/style.css --style=compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css",
    "compilefooter:sass": "sass ./public/sass/_footer.scss ./public/css/footer.comp.css",
    "concatfooter:css": "concat -o ./public/css/footer.concat.css ./public/css/icon-font.css ./public/css/footer.comp.css",
    "prefixfooter:css": "postcss --use autoprefixer -b 'last 10 versions' ./public/css/footer.concat.css -o ./public/css/footer.prefix.css",
    "compressfooter:css": "sass ./public/css/footer.prefix.css ./public/css/footer.css --style=compressed",
    "buildfooter:css": "npm-run-all compilefooter:sass concatfooter:css prefixfooter:css compressfooter:css",
    "deploy": "npm-run-all install build:js"
  },
  "author": "Le Tuan Hung",
  "module": "public/js/bundle.js",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.8",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.2.0",
    "express-xss-sanitizer": "^1.2.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "html-to-text": "^9.0.5",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.3.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.13",
    "pug": "^3.0.2",
    "sharp": "^0.33.4",
    "slugify": "^1.6.6",
    "stripe": "^15.8.0",
    "validator": "^13.11.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "concat": "^1.0.3",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "ndb": "^0.2.4",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.12.0",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.2.5",
    "sass": "^1.77.2"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "source": "public/js/index.js",
  "engines": {
    "node": ">=20.0.0"
  }
}
