<!DOCTYPE html>
<html>

<head>
  <%- include('_header') %>

  <title><%= title %></title>
</head>

<body>
  <%- include('_navbar') %>
  <main class="main">
    <div class="singup-form">
      <h2 class="heading-secondary ma-bt-lg">create your account!</h2>
      <form class="form form--signup">
        <div class="form__group"><label class="form__label" for="name">Your name</label><input class="form__input" id="name" type="text" required=""></div>
        <div class="form__group"><label class="form__label" for="email">Email address</label><input class="form__input" id="email" type="email" placeholder="you@example.com" required=""></div>
        <div class="form__group ma-bt-md"><label class="form__label" for="password">Password<input class="form__input" id="password" type="password" placeholder="••••••••" required="" minlength="8"></label></div>
        <div class="form__group ma-bt-md"><label class="form__label" for="passwordConfirm">Confirm password<input class="form__input" id="passwordConfirm" type="password" placeholder="••••••••" required="" minlength="8"></label></div>
        <div class="captcha-container">
          <div class="g-recaptcha" data-sitekey="6Ld4UO0pAAAAAHXmMsgYAhqRfQIV7o6PZ0tKRwNL"></div>
        </div>
        <script src="https://www.google.com/recaptcha/api.js" async defer></script>
        <div class="form__group"><button id="signupBtn" class="btn btn--green">Sign up</button></div>
      </form>
    </div>
  </main>
  <%- include('_footer') %>
  <script type="module" src="js/bundle.js"></script>

</body>

</html>